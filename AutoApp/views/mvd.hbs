        <div class="card-header" style="background-color:wheat">
            <legend class="text-center">Pending For Registration</legend></br>
        </div>            
        <div class="table-container">
            <table class="table" style="width:100%">
                <thead id="colored-table">
                    <th>CarId</th>
                    <th>AssetType</th>
                    <th>Color</th>
                    <th>DOM</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Owner</th>
                    <th>Status</th>
                    <th> </th>
                </thead>
                <tbody>
                    {{#each itemList}}
