<div id="registerModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Register Car</h4>
      </div>
      <div class="modal-body">
                <div class="form-modal">
                <div class="card-body">
                    <form id="manForm">
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <label for="QVinNumb" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="QVinNumb" aria-describedby="QVinNumb" placeholder="001">
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Car Owner</a>
                            <label for="carOwner" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="carOwner" aria-describedby="carOwner" placeholder="John Doe">
                            </div>
                        </div>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12" class="form-group">
                            <a>Registration Number</a>
                            <label for="regNumber" class="form-label mt-4"></label>
                            <input type="text" class="form-control" id="regNumber" aria-describedby="regNumber" placeholder="KL-01-AZ-1234">
                            </div>
                        </div>

                        </br>
                        <div class="row" >
                            <div class="col-md-12 col-sm-12">
                            <button type="button" onclick="RegisterCar(event)" class="btn btn-fill btn-secondary rounded-pill">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" onClick="reloadWindow()"data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
{{!-- $(function () { --}}
  $('#myModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget); // Button that triggered the modal
    var QVinNumb = button.data('QVinNumb'); 
    var modal = $(this);
    modal.find('#QVinNumb').val(QVinNumb);
  });
{{!-- }); --}}
</script>

